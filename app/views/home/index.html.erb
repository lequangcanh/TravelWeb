<section class="hero-home">
  <div class="overlay top">
  </div>
  <div class="search">
    <h1>Find your place to travel</h1>
    <div class="row">
      <div class="col-md-10">
        <div class="col-md-6 col-xs-4">
          <div class="input-group input-group-lg">
            <input type="text" class="form-control" placeholder="Place" aria-describedby="sizing-addon1">
          </div>
        </div>
        <div class="col-md-6 col-xs-4">
          <div class="input-group input-group-lg">
            <select class="form-control">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
            </select>
          </div>
        </div>
      </div>
      <div class="col-md-2 col-xs-2">
        <div class="input-group input-group-lg">
          <button class="btn btn-default btn-lg" type="button" name="button">Search</button>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="container">
  <section class="famous-places">
    <h1 class="title text-center">MOST FAMOUS</h1>
    <h3 class="text-center">The must-go places for all travellers...</h3>
    <% @famous_places.each_with_index do |place, inx| %>
      <div class="container place">
        <% if inx % 2 == 0 %>
          <div class="col-md-8 place-images">
            <div class="image-holder"><img src="http://dulichbana.vn/wp-content/uploads/2015/02/bana1.jpg" alt="" /></div>
            <div class="image-holder"><img src="http://admin.ductravel.com/cdn/media/1/da%20nang/bana-hills-5.jpg" alt="" /></div>
            <div class="image-holder"><img src="https://danangprivatetaxi.files.wordpress.com/2015/06/bana-hills-danang-city.jpg" alt="" /></div>
            <div class="image-holder"><img src="http://danangexplorer.com/wp-content/uploads/ba-na-51.jpg" alt="" /></div>
          </div>
          <div class="col-md-4">
            <h2><a href="<%=place_path(place)%>"><%= place.name %></a></h2>
            <p><%= place.description%></p>
          </div>
        <% else %>
          <div class="col-md-4">
            <h2><a href="<%=place_path(place)%>"><%= place.name %></a></h2>
            <p><%= place.description %></p>
          </div>
          <div class="col-md-8 place-images">
            <div class="image-holder"><img src="http://dulichbana.vn/wp-content/uploads/2015/02/bana1.jpg" alt="" /></div>
            <div class="image-holder"><img src="http://admin.ductravel.com/cdn/media/1/da%20nang/bana-hills-5.jpg" alt="" /></div>
            <div class="image-holder"><img src="https://danangprivatetaxi.files.wordpress.com/2015/06/bana-hills-danang-city.jpg" alt="" /></div>
            <div class="image-holder"><img src="http://danangexplorer.com/wp-content/uploads/ba-na-51.jpg" alt="" /></div>
          </div>
        <% end %>
      </div>
    <% end %>
  </section>
</div>
<div class="container">
  <section class="more-places">
    <h1 class="title text-center">Explore more...</h1>
    <div class="row">
      <div class="recent-places col-md-12">
        <% @recent_places.each do |place| %>
          <div class="place col-md-4">
            <img src="" alt="" width="100%" height="250px"/>
            <h3><%= place.name %></h3>
            <span><i class="glyphicon glyphicon-comment" aria-hidden="true"></i><%= place.place_comments_count %></span>
            <p><%= place.description %></p>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
