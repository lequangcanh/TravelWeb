<h1>Edit Place: <%= @place.name %></h1>

<div>
  <%= form_for(@place, url: admin_place_path, html: {multipart: true}) do |f| %>
    <%= render partial: 'admin/layouts/error_messages', locals: {zone: @place} %>
    <div class="form-group">
      <%= label_tag :name, "Name: " %>
      <%= f.text_field :name , class:"form-control"%>
    </div>

    <div class="form-group">
      <%= label_tag :province_id, "Province: " %>
      <%= f.select :province_id, options_for_select(@provinces.map { |u| [u.name, u.id] }), {}, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :description, "Description: " %>
      <%= f.text_area :description, class:"form-control" %>
    </div>

    <div class="form-group">
      <label for="file">Photos: </label> <%= file_field :photos, :files, multiple: "multiple", accept: "image/*", id: "photos", class:"file" %>
      <div class="clearfix"></div>
    </div>
    
    <%= f.submit 'Save change', class: "btn btn-primary" %>
  <% end %>
</div>
